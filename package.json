{
    "name": "CosmosDB-with-Mongo-API",
    "version": "0.1.37",
    "versionDate": "2023-07-20",
    "author": "hackolade",
    "engines": {
        "hackolade": "5.1.3",
        "hackoladePlugin": "1.0.1"
    },
    "contributes": {
        "target": {
            "applicationTarget": "COSMOSDB-MONGO",
            "title": "Cosmos DB w/ Mongo API",
            "versions": [
                "3.2.0",
                "3.6.0",
                "4.0.0"
            ]
        },
        "features": {
            "nestedCollections": false,
            "forwardEngineering": {
                "jsonSchema": {
                    "keepParentType": {
                        "objectId": {
                            "type": "string",
                            "pattern": "^[a-fA-F0-9]{24}$"
                        },
                        "regex": "string",
                        "date": {
                            "type": "string",
                            "format": "date-time"
                        },
                        "timestamp": {
                            "type": "string",
                            "format": "date-time"
                        },
                        "binary": {
                            "type": "string",
                            "mediaType": "image/png",
                            "contentEncoding": "base64"
                        },
                        "JavaScript": "string",
                        "JavaScript(w/scope)": "string",
                        "symbol": "string",
                        "minKey": "number",
                        "maxKey": "number"
                    }
                }
            },
            "enableReverseEngineering": true,
            "enableForwardEngineering": true,
            "enableReverseEngineeringDetectionSchemaByContent": true,
            "enableReversingDateTypeAsISODate": true
        }
    },
    "description": "Hackolade plugin for Azure Cosmos DB with MongoDB API",
    "dependencies": {
        "axios": "0.26.0",
        "bson": "1.1.5",
        "mongodb": "3.6.1",
        "qs": "6.9.6"
    },
    "lint-staged": {
        "*.{js,json}": "prettier --write"
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged",
        "pre-push": "npx eslint ."
    },
    "scripts": {
        "lint": "eslint . --max-warnings=0",
        "package": "node esbuild.package.js"
    },
    "devDependencies": {
        "@hackolade/hck-esbuild-plugins-pack": "0.0.1",
        "esbuild": "0.21.4",
        "esbuild-plugin-clean": "1.0.1",
        "eslint": "9.3.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-prettier": "5.1.3",
        "lint-staged": "14.0.1",
        "prettier": "3.2.5",
        "simple-git-hooks": "2.11.1"
    }
}
